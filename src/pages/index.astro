---
import Layout from "../layouts/Layout.astro";
import HeroTitle from "../components/ui/HeroTitle.astro";
import {CardLink} from "../components/CardLink"
import { variablesCardLink } from "../api/variablesCardLink";
import { Logout } from "../components/login/Logout";
import {AcademicoDashboard} from "../components/login/AcademicoDashboard"
---

<Layout
  title="Sistema Academico ESAM"
  canonical="https://academico-docentes.esam.edu.bo/"
  description="Sistema académico de ESAM para contratación y postulación de docentes."
>
<AcademicoDashboard client:only="react"/>
  <HeroTitle titulo="Menú Principal" />
  
  <Logout client:only="react"/>

  <div class="contenidoCentral">
    {
      variablesCardLink.map((boton) => (
      <CardLink title={boton.titulo} image={boton.imagen} href={boton.href} />
      ))
    }
  </div>
</Layout>

<style is:global>
  .contenidoCentral {
    text-align: center;
    margin-top: 1rem;
    margin-left: 15%;
    margin-right: 15%;
    max-width: 150.3333333333rem;

    animation-name: iniciar;
    animation-duration: 1s;
    animation-iteration-count: 1;
  }
  
  .cardLink {
    width: 30.333333%;
    display: inline-block;
  }
  .cardLink .boton {
    margin: 15px;
    padding: 0px;
    border-radius: 30px;
    box-shadow: 5px 5px 11px rgb(160, 163, 163);
    &:hover {
      transform: scale(1.1);
    }
  }

  @media (max-width: 699px) {
    .cardLink {
      width: 100%;
    }
  }

</style>
